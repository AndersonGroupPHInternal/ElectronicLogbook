<h3>Applicant Log sheet</h3>


<div id="Add" ng-controller="ApplicantController as model" ng-init="model.List()">
    <div style="width: 100%">
        <div style="width: 25%; float: left; display: inline-block;" ng-init="model.CreateApplicant('@Model.Date','@Model.TimeIn', '@Model.TimeOut')">

            <br />
            <label for="Date">Date:</label>
            <input type="text" class="form-control" id="Date" ng-model="model.Applicant.Date" />
            <label for="Name">Name:</label>
            <input type="text" class="form-control" id="Name" ng-model="model.Applicant.Name" />
            <label for="ApplyingFor">Applying For:</label>
            <input type="text" class="form-control" id="ApplyingFor" ng-model="model.Applicant.ApplyingFor" />
            @*<label for="PersonToVisit">Person To Visit:</label>
            <input type="text" class="form-control" id="PersonToVisit" ng-model="model.Applicant.PersonToVisit" />*@
            <label for="Designation">Designation:</label>
            <select class="form-control" id="Designation" ng-model="model.Applicant.Designation">
                <option disabled selected value="">-- select designation --</option>
                <option value="ANDERSON INTERNATIONAL DMCC"><span>ANDERSON INTERNATIONAL DMCC</span></option>
