                <option value="BALBOA DIGITAL"><span>BALBOA DIGITAL</span></option>
                <option value="BUSINESSPRO ASIA INC."><span>BUSINESSPRO ASIA INC.</span></option>
                <option value="CLARUS RCM INFOTECH (INDIA) PRIVATE LIMITED"><span>CLARUS RCM INFOTECH (INDIA) PRIVATE LIMITED</span></option>
                <option value="DIGITAL ATHLETE PTY LIMITED"><span>DIGITAL ATHLETE PTY LIMITED</span></option>
                <option value="ELEARNING EDGE INC / FUTURE PROOF"><span>ELEARNING EDGE INC / FUTURE PROOF</span></option>
                <option value="HUMAN DYNAMIC PHILIPPINES CONSULTANCY INC."><span>HUMAN DYNAMIC PHILIPPINES CONSULTANCY INC.</span></option>
                <option value="IoT INTERNATIONAL PTY LIMITED"><span>IoT INTERNATIONAL PTY LIMITED</span></option>
                <option value="IT SUPPORT LIMITED"><span>IT SUPPORT LIMITED</span></option>
                <option value="MARIA DOROTHEA T. MACANAIG"><span>MARIA DOROTHEA T. MACANAIG</span></option>
                <option value="STARSON INTERNATIONAL LIMITED"><span>STARSON INTERNATIONAL LIMITED</span></option>
                <option value="STONESTEP SA"><span>STONESTEP SA</span></option>
                <option value="SUITED CONNECTOR BPO INC."><span>SUITED CONNECTOR BPO INC.</span></option>
                <option value="TENPATH LLC"><span>TENPATH LLC</span></option>
                <option value="TRYPOD PHILIPPINES"><span>TRYPOD PHILIPPINES</span></option>
                <option value="VISTA LAND & LIFESCAPES INC"><span>VISTA LAND & LIFESCAPES INC</span></option>
            </select>
            <label for="TypeOfId">Type of ID:</label>
            <input type="text" class="form-control" id="TypeOfId" placeholder="SSS, GSIS, Voter's ID...'" ng-model="model.Applicant.TypeOfId" />
            <label for="IdNumber">ID Number:</label>
            <input type="text" class="form-control" id="IdNumber" ng-model="model.Applicant.IdNumber" />
            <label for="TimeIn">Time In:</label>
            <input type="text" class="form-control" id="TimeIn" ng-model="model.Applicant.TimeIn" />
            <label for="Comment">Comment:</label>
            <textarea rows="4" cols="50" class="form-control" id="Comment" ng-model="model.Applicant.Comment" placeholder="Enter comment..."></textarea>
            @*<script src="~/Scripts/pickers/currenttime.js"></script>*@
            @*<input type="time" value="now" class="form-control" id="TimeIn" ng-model="model.Applicant.TimeIn" />*@

            @*<label for="TimeOut">Time Out:</label>*@
            @*<input type="hidden" class="form-control" id="TimeOut" ng-model="model.Applicant.TimeOut" />*@
            <br />
            <a href="/Applicant/Index" class="btn btn-success" role="button" ng-click="model.Create(applicant) " style="margin-right:5px;float: left"><i class="glyphicon glyphicon-plus-sign"></i> Add</a>
            <a href="/Applicant/Index" class="btn btn-warning" role="button" style="margin-right: 10px; float:left"><i class="glyphicon glyphicon-remove"></i> Cancel</a>
        </div>

